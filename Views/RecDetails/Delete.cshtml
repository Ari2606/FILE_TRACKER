@model Rec_Tracker.Models.Rec_Details

@{
    ViewData["Title"] = "Delete Record";
}

<h2>Delete Record</h2>

<h4>Are you sure you want to delete this record?</h4>

<dl class="row">
    <dt class="col-sm-2">File Name</dt>
    <dd class="col-sm-10">@Model.File_Name</dd>

    <dt class="col-sm-2">Organisation</dt>
    <dd class="col-sm-10">@Model.Organisation</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="File_Number" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
 